{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 40, // Waybar height (to be removed for auto height)
  "width": 0, // Waybar width (0 == auto)
  "spacing": 0, // Gaps between modules 
  // Choose the order of the modules
  "modules-left": [
    "hyprland/workspaces",
    "custom/media"
  ],
  "modules-right": [
    "pulseaudio",
    "battery",
    "cpu",
    "memory",
    "temperature",
    "network",
    "custom/date",
    "clock",
    "tray",
    "custom/power"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "format": "{name}",
    "format-icons": {
      "urgent": "ÔÅ™",
      "active": "ÔÉà",
      "default": "ÔÉà",
      "persistent": "ÔÉà"
    },
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "all-outputs": false,
    "persistent_workspaces": {
      "*": 5
    }
  },
  "tray": {
    "icon-size": 21,
    "spacing": 12
  },
  "clock": {
    "timezone": "Europe/Brussels",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "format": "Û∞•î {:%H:%M}",
    "interval": 5
  },
  "custom/date": {
    "timezone": "Europe/Brussels",
    "exec": "date +'%a %Y-%m-%d'",
    "format": "Û∞É≠ {}",
    "interval": 1,
    "tooltip": false
  },
  "cpu": {
    "format": "Ôãõ {usage:2}%",
    "tooltip": false,
    "interval": 1
  },
  "memory": {
    "format": "ÔÉâ {:2}%",
    "interval": 1
  },
  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
    "critical-threshold": 95,
    "format": "{icon} {temperatureC:2}¬∞C",
    "format-icons": [
      "Ôãâ"
    ]
  },
  "battery": {
    "states": {
      "good": 90,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity:3}%",
    "format-charging": "Û∞ÇÑ {capacity:3}%",
    "format-plugged": "Ôá¶ {capacity:3}%",
    "format-alt": "{icon} ",
    "format-good": "{icon} {capacity:3}%",
    "format-full": "{icon} {capacity:3}%",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
  },
  "network": {
    "interface": "wlp4s0", // (Optional) To force the use of this interface
    "format-wifi": "Û∞§® ",
    "format-ethernet": "Û∞àÄ",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}",
    "format-linked": "ÔÅ± ",
    "format-disconnected": "ÔÅ± ",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume:2}% {icon} {format_source}",
    "format-bluetooth": "{volume:2}% {icon} Ôäî {format_source}",
    "format-source": "ÔÑ∞",
    "format-source-muted": "",
    "format-icons": {
      // "headphone": "ÔÄ•",
      // "hands-free": "Û∞Çë",
      // "headset": "Û∞Çë",
      // "phone": "ÔÇï",
      // "portable": "ÔÇï",
      // "car": "ÔÜπ",
      "default": [
        "ÔÄ¶", // 0  - 25
        "ÔÄß", // 25 - 50
        "ÔÄ®", // 50 - 75
        "ÔÄ®" // 75 - 100
      ]
    },
    "on-click": "pavucontrol"
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 200,
    "on-click": "playerctl play-pause",
    "format-icons": {
      "spotify": "ÔÜº",
      "firefox": "Û∞àπ",
      "default": "üéú"
